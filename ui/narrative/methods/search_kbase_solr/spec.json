{
    "ver": "0.0.1",
    "authors": [
        "qzhang"
    ],
    "contact": "https://kbase.us/contact-us/",
    "categories": ["active"],
    "widgets": {
        "input": "kbaseNarrativeMethodInput",
        "output" : "no-display"
    },
    "parameters": [ 
        {
            "id": "search_core",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [ "Genomes_ci" ],
            "field_type": "dropdown",
            "dropdown_options":{
                "options": [
                {
                  "value": "taxonomy in CI",
                  "display": "taxonomy_ci",
                  "id": "taxonomy_ci",
                  "ui_name": "taxonomy_ci"
                },
                {
                  "value": "taxonomy in production",
                  "display": "taxonomy_prod",
                  "id": "taxonomy_prod",
                  "ui_name": "taxonomy_prod"
                },
                {
                  "value": "GenomeFeatures_ci",
                  "display": "Genome Features in CI",
                  "id": "GenomeFeatures_ci",
                  "ui_name": "GenomeFeatures_ci"
                },
                {
                  "value": "Genomes_ci",
                  "display": "Genomes in CI",
                  "id": "Genomes_ci",
                  "ui_name": "Genomes_ci"
                },
                {
                  "value": "Genomes_prod",
                  "display": "Genomes in production",
                  "id": "Genomes_prod",
                  "ui_name": "Genomes_prod"
                },
                {
                  "value": "Biochemical Compounds",
                  "display": "Compounds",
                  "id": "Compounds",
                  "ui_name": "Compounds"
                },
                {
                  "value": "Subsystems",
                  "display": "Subsystems",
                  "id": "Subsystems",
                  "ui_name": "Subsystems"
                },
                {
                  "value": "Biochemical Reactions",
                  "display": "Reactions",
                  "id": "Reactions",
                  "ui_name": "Reactions"
                },
                {
                  "value": "Roles",
                  "display": "Roles",
                  "id": "Roles",
                  "ui_name": "Roles"
                }
              ]
            }
        },
        {
            "id": "search_query",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [ "{\"q\"=>\"*\"}" ],
            "field_type": "text",
            "text_options": {
                "validate_ws_types": [ "KBSolrUtil.searchdata" ]
            }
        },
        {
            "id": "search_param",
            "optional": true,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [ "{fl=>*,start=>0,rows=>10}" ],
            "field_type": "text",
            "text_options": {
                "validate_ws_types": [ "KBSolrUtil.searchdata" ]
            }
        },
        {
            "id": "result_format",
            "optional": true,
            "advanced": false,
            "allow_multiple": false,
            "default_values": ["xml"],
            "field_type": "dropdown",
            "dropdown_options":{
                "options": [
                {
                  "value": "xml",
                  "display": "xml",
                  "id": "xml",
                  "ui_name": "xml"
                },
                {
                  "value": "json",
                  "display": "json",
                  "id": "json",
                  "ui_name": "json"
                },
                {
                  "value": "csv",
                  "display": "csv",
                  "id": "csv",
                  "ui_name": "csv"
                }
              ]
            }               
        },
        {
            "id": "group_option",
            "optional": true,
            "advanced": true,
            "allow_multiple": false,
            "default_values": "",
            "field_type": "text",
            "text_options": {
                "validate_as": "text"
            }
        }
    ],
    "behavior": {
        "service-mapping": {
            "url": "",
            "name": "KBSolrUtil",
            "method": "search_kbase_solr",
            "input_mapping": [
                {
                    "input_parameter": "search_core",
                    "target_property": "search_core"
                },
                {
                    "input_parameter": "search_query",
                    "target_type_transform": "ref",
                    "target_property": "search_query"
                },
                {
                    "input_parameter": "search_param",
                    "target_type_transform": "ref",
                    "target_property": "search_param"
                },
                {
                    "input_parameter": "group_option",
                    "target_property": "group_option"
                },
                {
                    "input_parameter": "result_format",
                    "target_property": "result_format"
                }
            ],
            "output_mapping": [
                {
                    "service_method_output_path": [0, "search_result"],
                    "target_property": "search_result"
                },
                {
                "narrative_system_variable": "workspace",
                    "target_property": "workspace_name"
                }
            ]
        }
    },
    "job_id_output_field": "docker"
}
